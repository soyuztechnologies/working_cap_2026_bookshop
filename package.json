{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/attachments": "^3.6.1",
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-analyticapp": "cds watch --open analyticapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy bookshop --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "db-ext": {
        "[development]": {
          "model": "db/sqlite"
        },
        "[production]": {
          "model": "db/hana"
        }
      },
      "[production]": {
        "multitenancy": true,
        "auth": "xsuaa"
      },
      "[with-mtx]": {
        "multitenancy": true
      },
      "html5-repo": true,
      "portal": true
    },
    "profile": "with-mtx-sidecar"
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/analyticapp"
  ]
}
